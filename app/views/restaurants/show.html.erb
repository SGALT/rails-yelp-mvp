<div class="container">
  <h3>
    <%= @restaurant.name %>
  </h3>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
</div>
<br>
<div class="container">
  <h3>
    Reviews
  </h3>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.content %> -- <%= review.rating %> <span class= "far fa-star"></span>
      </li>
    <% end %>
  </ul>
  <%= link_to "back to restaurants list", restaurants_path, class: 'btn btn-primary' %>
  <%= link_to "add a review", new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
</div>

